<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >
    
    <RelativeLayout
        android:id="@+id/relativeLayoutLeftMargin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        >

    </RelativeLayout>
    


    <LinearLayout
        android:id="@+id/relativeLayoutCenterHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/relativeLayoutTopCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:orientation="vertical"
            >
	        <RelativeLayout
	            android:id="@+id/relativeLayoutTopMargin"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="6" >
	
	        </RelativeLayout>
	        
	    
	            
	        <LinearLayout
	            android:id="@+id/relativeLayoutPopWindow"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" 
	            android:background="@drawable/bg_guide"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            >
	        
	            <RelativeLayout
	                android:id="@+id/relativeLayoutTitle"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" >
									
	                <ImageView
	                    android:id="@+id/imageView"
	                    android:layout_width="36dip"
	                    android:layout_height="36dip"
	                    android:layout_alignParentLeft="true"
	                    android:layout_alignParentTop="true"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginTop="10dip"
	                    android:scaleType="fitXY"
	                    android:src="@drawable/icon_taxi" />
							
	                <ImageButton
	                    android:id="@+id/imageButtonBack"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignBottom="@id/imageView"
	                    android:layout_alignParentRight="true"
	                    android:layout_alignParentTop="false"
	                    android:layout_marginRight="10dip"
	                    android:background="@drawable/btn_down1"
	                    android:contentDescription="退出"
	                    android:src="@drawable/btn_down1"
	                    android:visibility="visible" />
			
	                <TextView
	                    android:id="@+id/textViewName"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignBottom="@+id/imageView"
	                    android:layout_toRightOf="@+id/imageView"
	                    android:gravity="center_vertical"
	                    android:text="@string/app_name"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:visibility="visible" />
	        
	            </RelativeLayout>
	
	
	
	
	            <LinearLayout
	                android:id="@+id/linearLayoutSeparator"
	                android:layout_width="match_parent"
	                android:layout_height="3dip"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="10dip"
	                android:background="@drawable/separator"
	                android:orientation="vertical" >
	
	            </LinearLayout>
				        <FrameLayout
		                android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
		
			        <RelativeLayout
			            android:id="@+id/relativeLayout"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content" >
												
			            <TextView
			                android:id="@+id/textViewAccount"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="40dip"
			                android:layout_marginTop="20dip"
			                android:text="输入手机号："
			                android:textAppearance="?android:attr/textAppearanceLarge" />
			
			            <LinearLayout
			                android:id="@+id/linearLayoutButtons"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_alignParentBottom="true" >
												
			                <Button
			                    android:id="@+id/buttonLogin"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginBottom="5dip"
			                    android:layout_marginLeft="10dip"
			                    android:layout_marginRight="5dip"
			                    android:layout_weight="1"
			                    android:text="用户登录" />
									
			                <Button
			                    android:id="@+id/buttonRegister"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="用户注册" />
												
			                <Button
			                    android:id="@+id/buttonGetBackPwd"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginBottom="5dip"
			                    android:layout_marginLeft="5dip"
			                    android:layout_marginRight="10dip"
			                    android:layout_weight="1"
			                    android:text="找回密码"
			                    android:visibility="visible" />
			
			            </LinearLayout>
									
			            <EditText
			                android:id="@+id/editTextAccount"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignLeft="@+id/textViewAccount"
			                android:layout_below="@+id/textViewAccount"
			                android:ems="10"
			                android:inputType="text" />
									
			            <TextView
			                android:id="@+id/textViewPwd"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignLeft="@id/textViewAccount"
			                android:layout_below="@+id/editTextAccount"
			                android:text="输入密码："
			                android:textAppearance="?android:attr/textAppearanceLarge" />
												
			            <EditText
			                android:id="@+id/editTextPwd"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignLeft="@id/textViewAccount"
			                android:layout_below="@+id/textViewPwd"
			                android:layout_centerHorizontal="false"
			                android:ems="10"
			                android:inputType="textPassword" />
			            <ProgressBar
			                android:id="@+id/progressBar"
			                style="?android:attr/progressBarStyleLarge"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_centerInParent="true" />
			
			        </RelativeLayout>
		        
		        </FrameLayout>
	            
	        
	        </LinearLayout>
        
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relativeLayoutBottomMargin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" >

        </RelativeLayout>
  
            
    </LinearLayout>
    
        
    <RelativeLayout
        android:id="@+id/relativeLayoutRightMargin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 

        android:layout_weight="10"
        >
        
    </RelativeLayout>
    
            
</LinearLayout>